<p id="notice"><%= notice %></p>

<div class="col-md-12">
<%= link_to 'Cadastrar ambiente', new_ambiente_path, {class: 'btn btn-success pull-right'} %>
</div>

<div class="col-md-12">
<div class="panel panel-primary">
  <div class="panel-heading"><center><h3>Lista de ambientes</h3></center></div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3"><center>Ações</center></th>
      </tr>
    </thead>
  
    <tbody>
      <% @ambientes.each do |ambiente| %>
        <tr>
          <td><%= ambiente.name %></td>
          <td><%= link_to '<i class="fa fa-search-plus" aria-hidden="true"></i>'.html_safe, ambiente, class: 'remove_link'%></td>
          <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_ambiente_path(ambiente), class: 'remove_link'%></td>
          <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, ambiente, {class: 'remove_link', method: :delete, data: { confirm: 'Are you sure?' }} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
